<Page
    x:Class="CoffeePOS.Views.AddProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border
                Width="800"
                Height="Auto"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                CornerRadius="10">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10,0,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="25"
                        FontWeight="Bold"
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="Add Product" />

                    <!-- Form nhập liệu -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Cột trái: Các trường nhập liệu -->
                        <StackPanel
                            Grid.Column="0"
                            Margin="20,0,50,0"
                            Orientation="Vertical">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="ID" />
                                <TextBox
                                    Grid.Row="1"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="Name" />
                                <TextBox
                                    Grid.Row="3"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="4"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="Price" />
                                <TextBox
                                    Grid.Row="5"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="6"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="Cost" />
                                <TextBox
                                    Grid.Row="7"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="8"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="% Discount" />
                                <TextBox
                                    Grid.Row="9"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Discount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="10"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="Manufacturer" />
                                <TextBox
                                    Grid.Row="11"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Manufacturer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="12"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="Quantity" />
                                <TextBox
                                    Grid.Row="13"
                                    Width="350"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0,0,0,1"
                                    Text="{x:Bind ViewModel.Product.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="14"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    FontWeight="Medium"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"
                                    Text="Type" />
                                <ComboBox
                                    Grid.Row="15"
                                    Width="350"
                                    Padding="10,5"
                                    DisplayMemberPath="TypeName"
                                    ItemsSource="{x:Bind ViewModel.AllTypes, Mode=OneWay}"
                                    SelectedValuePath="TypeName"
                                    SelectedValue="{x:Bind ViewModel.Product.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </StackPanel>

                        <!-- Cột phải: Hình ảnh sản phẩm -->
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,0,0,20">
                            <Image
                                Width="300"
                                Height="300"
                                Source="{x:Bind ViewModel.Product.Image, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button
                                Margin="0,10"
                                HorizontalAlignment="Center"
                                Command="{x:Bind ViewModel.LoadImageCommand}"
                                Content="Import Image" />
                        </StackPanel>
                    </Grid>

                    <!-- Nút Add và Cancel -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            Margin="0,20,0,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="35"
                                Margin="20,0,20,0"
                                Content="Add"
                                CornerRadius="10" />
                            <Button
                                Width="100"
                                Height="35"
                                Margin="20,0,20,0"
                                Content="Cancel"
                                CornerRadius="10"
                                Click="CancelButton_Click" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,0,0,20"
                            FontSize="15"
                            Foreground="Red"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind ViewModel.Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center" />
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>