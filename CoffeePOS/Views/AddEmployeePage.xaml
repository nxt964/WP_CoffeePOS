<Page
    x:Class="CoffeePOS.Views.AddEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CoffeePOS.ViewModels"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock
                Grid.Row="0"
                Text="Add New Employee"
                Style="{StaticResource TitleTextBlockStyle}"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"/>

            <!-- Form nhập liệu -->
            <StackPanel Grid.Row="1" Spacing="10" Margin="20,0">
                <TextBox
                    Header="Employee Name"
                    Width="300"
                    HorizontalAlignment="Left"
                    Text="{x:Bind ViewModel.EmployeeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox
                    Header="Email"
                    Width="300"
                    HorizontalAlignment="Left"
                    Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox
                    Header="Phone"
                    Width="300"
                    HorizontalAlignment="Left"
                    Text="{x:Bind ViewModel.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox
                    Header="Salary"
                    Width="300"
                    HorizontalAlignment="Left"
                    Text="{x:Bind ViewModel.SalaryText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Nút Add và Cancel -->
            <StackPanel
                Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="10"
                Margin="0,20,20,0">
                <Button
                    Content="Add"
                    Command="{x:Bind ViewModel.AddEmployeeCommand}"/>
                <Button
                    Content="Cancel"
                    Command="{x:Bind ViewModel.CancelCommand}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>