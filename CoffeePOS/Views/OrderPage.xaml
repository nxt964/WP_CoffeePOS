<Page
    x:Class="CoffeePOS.Views.OrderPage"
    x:Name="ThisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:viewmodels="using:CoffeePOS.ViewModels"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid x:Name="ContentArea" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Search Bar and Add Button -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Width="300"
                    Height="30"
                    PlaceholderText="Search by customer name"
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Button
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Content="Search"
                    Command="{x:Bind ViewModel.SearchCommand}"/>
                <Button
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Content="Add"
                    Click="AddButton_Click"/>
            </Grid>

            <!-- Row 1: Filter -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DatePicker
                    Grid.Column="0"
                    Width="200"
                    Header="From day"
                    Date="{x:Bind ViewModel.FromDate, Mode=TwoWay}"/>
                <DatePicker
                    Grid.Column="1"
                    Width="200"
                    Margin="10,0,0,0"
                    Header="To day"
                    Date="{x:Bind ViewModel.ToDate, Mode=TwoWay}"/>
                <Button
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Content="Filter"
                    Command="{x:Bind ViewModel.FilterCommand}"/>
                <Button
                    Grid.Column="3"
                    Content="Remove Filter"
                    Command="{x:Bind ViewModel.RemoveFilterCommand}"/>
            </Grid>

            <!-- Row 2: Order List -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <controls:DataGrid
                    AutoGenerateColumns="False"
                    ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn
                            Header="Order ID"
                            Width="*"
                            Binding="{Binding Id}"/>
                        <controls:DataGridTextColumn
                            Header="Date"
                            Width="*"
                            Binding="{Binding OrderDate}"/>
                        <controls:DataGridTextColumn
                            Header="Customer Name"
                            Width="*"
                            Binding="{Binding CustomerName}"/>
                        <controls:DataGridTextColumn
                            Header="Total Price"
                            Width="*"
                            Binding="{Binding TotalAmount}"/>
                        <controls:DataGridTemplateColumn
                            Header="Actions"
                            Width="*">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="viewmodels:OrderDisplay">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Button
                                            Content=""
                                            FontFamily="Segoe MDL2 Assets"
                                            Margin="0,0,5,0"
                                            Tag="{x:Bind Id}"
                                            Click="ViewButton_Click"/>
                                        <Button
                                            Content=""
                                            FontFamily="Segoe MDL2 Assets"
                                            Background="Red"
                                            Foreground="White"
                                            Margin="5,0,0,0"
                                            Tag="{x:Bind Id}"
                                            Click="DeleteButton_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>

            <!-- Row 3: Pagination -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="Order per page"/>
                    <TextBox
                        Width="50"
                        Margin="10,0,0,0"
                        Text="{x:Bind ViewModel.PageSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Button
                        Width="80"
                        Margin="10,0"
                        Content="Previous"
                        Command="{x:Bind ViewModel.PreviousPageCommand}"/>
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind ViewModel.PageInfo, Mode=OneWay}"
                        TextAlignment="Center"/>
                    <Button
                        Width="80"
                        Margin="10,0"
                        Content="Next"
                        Command="{x:Bind ViewModel.NextPageCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>